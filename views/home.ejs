	<h2 class="text-left">Places</h2>
	<table id="myTable" class="table table-striped table-hover">
    			<thead class="thead-dark">
		<tr>
			<th onclick="sortTable(0)">ID</th>
  			<th onclick="sortTable(1)">Name</th>
		</tr>
